---
const experiences = [
  {
    company: "California State University, Chico",
    roles: [
      {
        title: "Subject Tutor",
        period: "August 2024 - Present",
        description: "As a subject tutor for Computer Science, I simplify complex concepts and provide hands-on support to students, helping them master algorithms and C++ programming."
      },
      {
        title: "Instructional Student Assistant",
        period: "January 2024 - Present",
        description: "Working as a Lab Assistant for the Algorithms and Data Structures course, helping students with software installations, Linux SSH connections, and understanding algorithms."
      }
    ]
  },
  {
    company: "ShapeAI",
    roles: [
      {
        title: "Full Stack Developer",
        period: "July 2021 - September 2021",
        description: "Developed and maintained web applications using modern technologies and best practices."
      }
    ]
  }
];
---

<section id="experience" class="py-24 bg-[#111]">
  <div class="max-w-6xl mx-auto px-4">
    <h2 class="text-4xl font-bold text-center mb-16">
      Work <span class="text-gradient">Experience</span>
    </h2>

    <div class="space-y-12">
      {experiences.map((exp) => (
        <div 
          data-aos="fade-up" 
          class="bg-black/50 rounded-2xl p-8 backdrop-blur-lg border border-white/10"
        >
          <h3 class="text-2xl font-bold mb-6 text-[#007AFF]">{exp.company}</h3>
          <div class="space-y-8">
            {exp.roles.map((role) => (
              <div class="relative pl-6 border-l-2 border-[#007AFF]/30">
                <div class="absolute w-3 h-3 bg-[#007AFF] rounded-full -left-[7px] top-2"></div>
                <h4 class="text-xl font-semibold">{role.title}</h4>
                <p class="text-gray-400 mt-1">{role.period}</p>
                <p class="text-gray-300 mt-3">{role.description}</p>
              </div>
            ))}
          </div>
        </div>
      ))}
    </div>
  </div>
</section>