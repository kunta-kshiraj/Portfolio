<section id="contact" class="py-24 bg-black relative overflow-hidden">
  <div class="max-w-4xl mx-auto px-4">
    <div 
      data-aos="fade-up"
      class="bg-[#111] rounded-3xl p-8 md:p-12 relative z-10"
    >
      <h2 class="text-4xl font-bold text-center mb-12">
        Let's <span class="text-gradient">Connect</span>
      </h2>
      
      <div class="grid md:grid-cols-2 gap-8">
        <div class="space-y-6">
        <img 
            src="/images/kk.png"
            alt="code.image"
            class="w-half h-40 "
          />
          <div class="flex items-center gap-4">
            <div class="bg-[#007AFF]/10 p-3 rounded-full">
              <svg class="w-6 h-6 text-[#007AFF]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
              </svg>
            </div>
            <div>
              <h3 class="text-sm text-gray-400">Email</h3>
              <a href="mailto:kshiraj.kunta@gmail.com" class="text-lg hover:text-[#007AFF] transition-colors">
                kshiraj.kunta@gmail.com
              </a>
            </div>
          </div>
          
          <div class="flex items-center gap-4">
            <div class="bg-[#007AFF]/10 p-3 rounded-full">
              <svg class="w-6 h-6 text-[#007AFF]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
              </svg>
            </div>
            <div>
              <h3 class="text-sm text-gray-400">Phone</h3>
              <a href="tel:5302307874" class="text-lg hover:text-[#007AFF] transition-colors">
                (530) 230-7874
              </a>
            </div>
          </div>
          
          <div class="flex items-center gap-4">
            <div class="bg-[#007AFF]/10 p-3 rounded-full">
              <svg class="w-6 h-6 text-[#007AFF]" fill="currentColor" viewBox="0 0 24 24">
                <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
              </svg>
            </div>
            <div>
              <h3 class="text-sm text-gray-400">LinkedIn</h3>
              <a 
                href="https://www.linkedin.com/in/kunta-kshiraj" 
                target="_blank"
                class="text-lg hover:text-[#007AFF] transition-colors"
              >
                kunta-kshiraj
              </a>
            </div>
          </div>
          <div class="flex items-center gap-4">
            <div class="bg-[#007AFF]/10 p-3 rounded-full"> 
            <svg class="w-6 h-6 text-[#007AFF]" fill="currentColor" viewBox="0 0 24 24"> 
